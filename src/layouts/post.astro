---
import Layout from '$layouts/base.astro';
import PostContent from '$components/post-content.astro';

const {content} = Astro.props;
const {title, description, publishDate, permalink, image} = content;
---
<Layout title={title} description={description} permalink={permalink}>
  <PostContent title={title} permalink={permalink} publishDate={publishDate} image={image}>
    <slot />
  </PostContent>
</Layout>
