---
import Layout from '$layouts/base.astro';
import BlogPost from '$components/post-page.astro';

const {content} = Astro.props;
const {title, description, publishDate, author, permalink, alt} = content;
---
<Layout title={title} description={description} permalink={permalink}>
  <BlogPost title={title} author={author} publishDate={publishDate} alt={alt}>
    <slot />
  </BlogPost>
</Layout>
