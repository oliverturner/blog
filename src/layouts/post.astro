---
import Layout from "$layouts/base.astro";
import PostContent from "$components/post-content.astro";

const { content } = Astro.props;
const { title, description, publishDate, permalink, image } = content;
---

<Layout {title} {description} {permalink}>
	<PostContent {title} {permalink} {publishDate} {image}>
		<slot />
	</PostContent>
</Layout>
